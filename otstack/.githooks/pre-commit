#!/usr/bin/env bash
set -e

echo "Running pre-commit checks..."

echo "Running linter and type checker..."
make check
if [ $? -ne 0 ]; then
    echo "Linting or type checking failed. Commit aborted."
    exit 1
fi

echo "Running tests..."
make test
if [ $? -ne 0 ]; then
    echo "Tests failed. Commit aborted."
    exit 1
fi

echo "All pre-commit checks passed."
